include /apps/mixins/errors
extends /apps/game-layout


block contentBlock
  h1 Login
  form(action=req.path, method='POST')
    input(type='hidden', name='_csrf', value=req.csrfToken())
    fieldset
      div
        label Email:
        input(type='text', name='email', value=inputs.email)
      +fieldErrors(errors, 'email')
      div
        label Password:
        input(type='password', name='password', value=inputs.password)
      +fieldErrors(errors, 'password')
    div
      input(type='submit', value='Submit')
